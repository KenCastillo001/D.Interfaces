---
import Footer from '../components/Footer';
import StarRating from './estrellas';
import Modal from "../components/modal.jsx";
import Header from './Header';
import ArticleHandler from '../components/comprado';
import '../styles/global.css';

const { slug, titulo, precio, nivel, url, imagen, temario, nombre ,article } = Astro.props;


---



<head>
  <meta charset="UTF-8">
</head>
<script>
  if (!localStorage.getItem("usuario")) {
    window.location.href = "/blog/loginForm";
  }
</script>

<Header class="bg-white bg-opacity-10 backdrop-blur-lg shadow-lg border border-white border-opacity-20 fixed top-0 w-full z-50 rounded-b-lg transition-all duration-300 hover:shadow-2xl" />

<body class="dark:bg-gray-800 text-white p-6">

  <div class="dark:bg-gray-800 backdrop-blur-2xl bg-white bg-opacity-5 border border-white border-opacity-20 rounded-3xl shadow-2xl hover:shadow-3xl transition duration-300 max-w-5xl mx-auto px-6 py-10 flex flex-col lg:flex-row items-center lg:items-start">

    <!-- Imagen en la parte superior -->
    <div class="w-full flex flex-col justify-center items-center mb-6 lg:mb-0">
      <img src={imagen} alt={titulo} class="rounded-2xl shadow-lg w-full h-auto object-cover mb-6" />

      <!-- Temario debajo de la imagen -->
      <div class="bg-white dark:bg-gray-700 bg-opacity-10 backdrop-blur-lg border border-white border-opacity-20 rounded-2xl shadow-lg p-6 w-full">
        <h2 class="text-cyan-500 text-4xl font-bold mb-4">Qué aprenderás</h2>
        <ul class="space-y-2">
          {temario.map((item: unknown, index: any) => (
            <li key={index} class="text-gray-800 dark:text-gray-300 text-xl">• {item}</li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Información del curso a la derecha -->
    <div class="lg:w-1/2 w-full lg:pl-10">
      <nav class="text-sm text-cyan-400 mb-4">
        <a href="#" class="font-bold hover:text-cyan-300">Inicio</a> &gt;
        <a href="#" class="font-bold hover:text-cyan-300">Programación</a> &gt;
        <span class="text-gray-400">Introducción a {titulo}</span>
      </nav>

      <h1 class="text-cyan-400 text-6xl font-extrabold drop-shadow-lg mb-2">Introducción a {titulo}</h1>
      <p class="text-gray-300 text-sm mb-4">Curso</p>

      <footer class="flex items-center justify-between bg-gradient-to-r from-cyan-500 to-teal-400 mt-4 rounded-lg p-4 shadow-md">
        <span class="text-white text-2xl font-bold">Nivel: {nivel}</span>
        <span class="text-white text-2xl font-bold">Precio: ${precio}.00</span>
      </footer>

      <div class="mt-6">
        <Modal client:load titulo={titulo} precio={precio} slug={slug}/>
      </div>
    </div>

  </div>

</body>

<div class="flex justify-center items-center w-full dark:bg-gray-800 min-h-screen">
  <div class="my-1 px-1 w-full flex justify-center">
    <article class="overflow-hidden rounded-3xl shadow-2xl bg-gradient-to-br from-cyan-500 via-blue-500 to-indigo-600 bg-opacity-20 backdrop-blur-md border border-white border-opacity-30 text-white mx-auto w-[1200px] p-6 hover:shadow-3xl transition-transform transform hover:scale-105">
      <footer class="flex items-center justify-between leading-none p-4">
        <StarRating slug={slug} client:load />
      </footer>
    </article>
  </div>
</div>

<section class="bg-gradient-to-r from-cyan-500 via-blue-500 to-indigo-600 p-10 rounded-3xl shadow-lg mt-10">
  <div class="max-w-6xl px-6 py-10 mx-auto">
    <h1 class="text-4xl font-extrabold text-white text-center mb-4">¿Qué opinan nuestros estudiantes?</h1>

    <div class="flex flex-col md:flex-row items-center justify-around space-y-6 md:space-y-0">
      <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl shadow-lg p-6 text-center max-w-sm border border-white border-opacity-20">
        <img class="w-24 h-24 rounded-full mx-auto ring-4 ring-cyan-400" src="https://images.unsplash.com/photo-1488508872907-592763824245?ixlib=rb-1.2.1&auto=format&fit=crop&w=1470&q=80" alt="client photo" />
        <h2 class="text-2xl font-bold text-white mt-4">Ema Watson</h2>
        <p class="text-cyan-200 text-sm">Marketing Manager at Stech</p>
        <p class="text-white mt-2">“Este curso cambió mi vida. Ahora entiendo React y Tailwind como nunca antes”.
        </p>
      </div>
    </div>
  </div>
</section>

<Footer class="bg-gray-800 text-gray-400 text-center py-6 mt-10 border-t border-gray-700 hover:text-white transition-colors duration-300">
  © 2025 Academia. Todos los derechos reservados.
</Footer>











